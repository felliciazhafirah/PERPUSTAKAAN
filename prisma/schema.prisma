datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      UserRole
  memberId  Int?
  member    Member?  @relation(fields: [memberId], references: [id])
  createdAt DateTime @default(now())
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  year      Int
  stock     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  loan      Loan[]
}

model Member {
  id        Int      @id @default(autoincrement())
  name      String
  className String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  loan      Loan[]
  users     User[]
}

model Loan {
  id         Int       @id @default(autoincrement())
  memberId   Int
  bookId     Int
  borrowDate DateTime
  dueDate    DateTime
  returnDate DateTime?
  status     String

  member Member @relation(fields: [memberId], references: [id])
  book   Book   @relation(fields: [bookId], references: [id])
}

enum UserRole {
  ADMIN
  PETUGAS
  MEMBER
}
